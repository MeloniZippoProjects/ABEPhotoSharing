<UserControl x:Class="KPClient.StatusLed"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KPClient"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Canvas
        Height="20"
        Width="20"
        VerticalAlignment="Center">
        <Ellipse
            Name="OkLed"
            Visibility="Visible"
            Margin="4"
            Height="11"
            Width="11"
            Fill="LightGreen"
            Stroke="AliceBlue"
            StrokeThickness="1"
        />
        <Ellipse
            Name="ErrorLed"
            Visibility="Hidden"
            Margin="4"
            Height="11"
            Width="11"
            Fill="DarkRed"
            Stroke="AliceBlue"
            StrokeThickness="1"
        />
        <Ellipse
            Name="WorkingLed"
            Visibility="Hidden"
            Margin="4"
            Height="11"
            Width="11"
            Fill="Orange"
            Stroke="AliceBlue"
            StrokeThickness="1"
        />
    </Canvas>
</UserControl>
